<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background và Foreground chính -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#FF1E1E1E" />
    <SolidColorBrush x:Key="ForegroundColor" Color="#FFF8F8F8" />

    <!-- Nút và thanh công cụ -->
    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#FF2C2C2C" />
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="#FFBBBBBB" />
    <SolidColorBrush x:Key="ToolbarBackgroundColor" Color="#FF232323" />

    <!-- Biên và đường viền -->
    <SolidColorBrush x:Key="BorderColor" Color="#FF3A3A3A" />

    <!-- Màu đặc biệt -->
    <SolidColorBrush x:Key="HighlightColor" Color="#FF4CAF50" />
    <SolidColorBrush x:Key="AccentColor" Color="#FF9C27B0" />

    <!-- Font styles -->
    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
    </Style>

    <!-- Nút với màu sắc tùy chỉnh -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource BackgroundColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
</ResourceDictionary>
